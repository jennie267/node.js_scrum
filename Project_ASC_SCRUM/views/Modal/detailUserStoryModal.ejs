<!-- Modal -->
<div class="modal fade" id="detailUserStoryModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="background: #354555; color: #ffffff;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" style="font-weight: bolder;">User Story 상세보기</h4>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class="col-xs-5 col-xs-offset-1">
            <p style="font-size: 27px; font-weight: bold;">Release Category :</p>
          </div>
          <div class="col-xs-6">
            <input type='text' class='col-xs-12 text-center noPadding detailStorycate'
            style='background-color:transparent; border:none; font-size: 25px; font-weight: bold;' 
            disabled value=''>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">Title</label>
          </div>
          <div class="col-xs-8">
						<input type='text' class='col-xs-12 text-center noPadding detailStoryTitle'
            style='background-color:transparent; border:none; font-weight: bold; font-size: 17px;' 
            disabled value=''>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">As a</label> <label style="font-size: 15px;">(사용자)</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailStoryAs_a'
            style='background-color:transparent; border:none; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">I want</label> <label style="font-size: 15px;">(기능)</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailStoryI_want'
            style='background-color:transparent; border:none; font-weight: bold; font-size: 17px;' 
            disabled value=''>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">So that</label> <label style="font-size: 15px;">(목적)</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailStoryso_that'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;' 
            disabled value=''>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">우선순위</label>
          </div>
          <div class="col-xs-3">
            <input type='text' class='col-xs-12 text-center noPadding detailStoryPriority'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size: 20px;">작업시간</label>
          </div>
          <div class="col-xs-3">
            <input type='text' class='col-xs-12 text-center noPadding detailStoryTime'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        <br>

        <div class="modal-footer">
          <div class="text-center">
              <button type="button" class="btn btn-default" data-dismiss="modal" style=" font-size: 15px; font-weight: bold; background-color: #354555; color:white">확인</button>
          </div>
        </div>
      </div>

    </div>
