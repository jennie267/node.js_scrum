<!-- Modal -->
  <div class="modal fade" id="detailTodoModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style=" background: #354555; color: #ffffff;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <input type='text' class="modal-title detailBackLogStatus" disabled style="font-weight : bold; background-color:transparent; border:none; font-size:30px; height:30px;" value=''>
          <input type='hidden' class="detailBackLogNo" value=''>
          <input type='hidden' class="detailstatus" value=''>
        </div>
        <div class="modal-body">
        
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label for="userStoryList" style="font-size : 20px;"> UserStory </label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailDoUser'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        <br>
        
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size : 20px;">Content</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailDoContent'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        <br>
        
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size : 20px;">Worker</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailDoWorker'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        
        
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1">
            <label style="font-size : 20px;" class='detailDate'>Date</label>
          </div>
          <div class="col-xs-8">
            <input type='text' class='col-xs-12 text-center noPadding detailDoDate'
            style='background-color:transparent; border:none; width: 100%; font-weight: bold; font-size: 17px;'
            disabled value=''>
          </div>
        </div>
        
        
        <div class="modal-footer">
          <div class="text-center">
          	<div class='col-xs-3'>
            	<button type="button" class="btn btn-success ThrowBack" style="width : 100%; font-size : 15px; font-weight : bold;">항목 내리기</button>
          	</div>
          	<div class='col-xs-6'>
            	<button type="button" class="btn btn-success" data-dismiss="modal" style="width : 100%; font-size : 15px; font-weight : bold;">확인</button>
						</div>
          	<div class='col-xs-3'>
            	<button type="button" class="btn btn-success ThrowOut" style="width : 100%; font-size : 15px; font-weight : bold;">항목 넘기기</button>
          	</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>