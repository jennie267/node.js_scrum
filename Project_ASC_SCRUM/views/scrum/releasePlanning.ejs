    <div class="col-lg-12">
      <div class="page-header" id="taskBoardBtn">
        <a class="btn btn-default" data-toggle="modal" data-target="#categoryModal"> Category </a> 
        <a href="/taskboard/<%=project_list_no%>/0" class="btn btn-default"> Task Board </a> 
