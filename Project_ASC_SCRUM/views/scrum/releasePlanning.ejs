	<!-- 포커 관련 정보를 띄운다!! -->
  <div class='PlanningHere' style="display: flex; overflow-x: auto; overflow-y:hidden; white-space: nowrap; padding-bottom: 3%;">
		<% categoryData.forEach(function (item,index){ %>
			<table>
				<tr>
					<th><%=categoryData[index].title%></th>
				</tr class='CateNum' value='<%=categoryData[index].category_no%>'>
			<% storyData.forEach(function (item,ind){
					if(storyData.length > 0){
						if(categoryData[index].category_no == storyData[ind].category_no){%>
								<tr>
									<td class='pokerToDo'>
										<%if(false){%><a class='DetailPoker' value=<%=storyData[ind].user_story_no%> data-toggle="modal" data-target="#planningPokerModal">
										<%} else if(true){%><a class='DetailPokerMaster' value=<%=storyData[ind].user_story_no%> data-toggle="modal" data-target="#planningPokerMasterModal"><%}%>							
										<%=storyData[ind].title%></a>
									</td>
								</tr class='UserStoryHere'>
						<%}
					};
				});%>
			</table>
		<%});%>
						
  </div>
</div>

